doctype html
html
  head
    meta(charset='utf-8')
    title Boilerplate
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
  body
    nav.navbar.mb-3.navbar-expand-lg(style='background-color: #3d5a80; box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2); font-family: "Roboto", sans-serif;')
      .container-fluid
        a.navbar-brand(href='#', style=' font-size: 1.75rem; color: #edf2f4; letter-spacing: 2px;') Boilerplate for User Authentication 
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation' style='border-color: #edf2f4;')
          span.navbar-toggler-icon(style="background-image: url('data:image/svg+xml,%3csvg xmlns=\'http://www.w3.org/2000/svg\' viewBox=\'0 0 30 30\'%3e%3cpath stroke=\'%23edf2f4\' stroke-width=\'2\' d=\'M4 7h22M4 15h22M4 23h22\'/%3e%3c/svg%3e');")
        if name
          #navbarSupportedContent.collapse.navbar-collapse.justify-content-end
            form.d-flex
              span.navbar-text.pe-2(style='font-size: 1rem; color: #edf2f4; margin-right: 10px;') Hello #{name}
              a.btn.ms-2(href='/logout', style='border-color: #edf2f4; color: #edf2f4; background-color: transparent; margin-left: 10px; text-transform: uppercase;') Logout
              a.btn.ms-2(href='/logout', style='background-color: #edf2f4; color: #3d5a80; margin-left: 10px; text-decoration: none; text-transform: uppercase; font-weight: bold;') Logout
    .py-2
        block content

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
